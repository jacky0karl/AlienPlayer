<resources xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto">

    <!-- Application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:windowBackground">@color/fc_bg</item>
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColor">@color/primary_text</item>
        <item name="actionBarStyle">@style/Theme.MyApp.ActionBar</item>
    </style>

    <style name="Theme.Toolbar" parent="AppTheme">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Playing" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
    </style>

    <style name="Theme.Search" parent="AppTheme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowAnimationStyle">@style/NoAnimation</item>
    </style>

    <style name="Theme.MyApp.ActionBar" parent="@style/Widget.AppCompat.Light.ActionBar.Solid">
        <item name="elevation">0dp</item>
    </style>

    <style name="ThemeOverlay.MyApp.ActionBar" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="searchViewStyle">@style/Theme.MyApp.SearchView</item>
    </style>

    <style name="Theme.MyApp.SearchView" parent="@style/Widget.AppCompat.SearchView">
        <item name="suggestionRowLayout">@layout/search_suggestions</item>
    </style>

    <style name="TextApperance.Toolbar.Title" parent="@style/TextAppearance.AppCompat">
        <item name="android:textColor">@color/light_text</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="NoAnimation">
        <item name="@android:activityOpenEnterAnimation">@null</item>
        <item name="@android:activityOpenExitAnimation">@null</item>
        <item name="@android:activityCloseEnterAnimation">@null</item>
        <item name="@android:activityCloseExitAnimation">@null</item>
    </style>

</resources>