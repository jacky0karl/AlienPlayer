<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/artwork"
        android:layout_width="240dp"
        android:layout_height="240dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        app:civ_border_width="2dp"
        app:civ_border_color="@android:color/white"/>

    <com.jk.alienplayer.widget.CircularSeekBar
        android:id="@+id/seekBar"
        android:layout_width="260dp"
        android:layout_height="260dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        app:circle_color="@color/primary"
        app:circle_progress_color="@color/accent"
        app:circle_stroke_width="3dp"
        app:pointer_color="@color/accent"
        app:pointer_halo_border_width="1dp"
        app:pointer_halo_color="@color/accent"
        app:pointer_halo_width="2dp"
        app:pointer_radius="4dp"/>

    <ImageView
        android:id="@+id/repeat_btn"
        android:layout_width="@dimen/button_size"
        android:layout_height="@dimen/button_size"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/repeat_all"/>

</RelativeLayout>