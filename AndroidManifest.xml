<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.jk.alienplayer"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.MODIFY_AUDIO_SETTINGS" />

    <application
        android:name="MainApplication"
        android:allowBackup="true"
        android:icon="@drawable/app_icon"
        android:theme="@style/AppTheme" >
        <meta-data
            android:name="android.app.default_searchable"
            android:value=".ui.SearchActivity" />

        <activity
            android:name=".ui.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PageIndicatorDefaults" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ui.SongsActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.SearchActivity"
            android:label="@string/search"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".ui.NetworkSearchActivity"
            android:label="@string/discover"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.PlayingActivity"
            android:parentActivityName=".ui.MainActivity"
            android:screenOrientation="portrait"
            android:theme="@style/Theme.PageIndicatorDefaults" >
        </activity>
        <activity
            android:name=".ui.TrackInfoActivity"
            android:label="@string/track_details"
            android:parentActivityName=".ui.PlayingActivity"
            android:screenOrientation="portrait"
            android:windowSoftInputMode="stateHidden" >
        </activity>
        <activity
            android:name=".ui.NetworkAlbumsActivity"
            android:parentActivityName=".ui.NetworkSearchActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.NetworkTracksActivity"
            android:parentActivityName=".ui.NetworkSearchActivity"
            android:screenOrientation="portrait" >
        </activity>
        <activity
            android:name=".ui.DownloadListActivity"
            android:label="@string/download_list"
            android:parentActivityName=".ui.NetworkSearchActivity"
            android:screenOrientation="portrait" >
        </activity>

        <service android:name=".impl.PlayService" >
        </service>
        <service android:name=".impl.MediaScanService" >
        </service>

        <receiver
            android:name="APWidgetProvider"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.jk.alienplayer.start" />
                <action android:name="com.jk.alienplayer.track_change" />
                <action android:name="com.jk.alienplayer.pause" />
                <action android:name="com.jk.alienplayer.stop" />
                <action android:name="com.jk.alienplayer.progress_update" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>
    </application>

</manifest>